                        VerticalAlignment="Stretch"
                        dx:BlendHelper2.ThemeInfo="Core\Core\Editors\Themes\Generic\ButtonEdit.xaml;95;10"
                        dx:FocusHelper2.Focusable="False"
                        Focusable="False"
