                    <dxe:ButtonsControl
                        x:Name="PART_RightButtons"
                        Grid.Column="3"
                        dx:BlendHelper2.ThemeInfo="Core\Core\Editors\Themes\Generic\ButtonEdit.xaml;96;10">
                        <dxe:ButtonsControl.Visibility>
                            <Binding Path="ActualShowRightButtons" RelativeSource="{RelativeSource TemplatedParent}">
                                <Binding.Converter>
                                    <dx:BoolToVisibilityConverter />
                                </Binding.Converter>
                            </Binding>
                        </dxe:ButtonsControl.Visibility>
                    </dxe:ButtonsControl>
                </Grid>
            </ContentControl>
            <ControlTemplate.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding (dxe:BaseEdit.OwnerEdit).(dxe:ActualPropertyProvider.Properties).IsTextEditable, RelativeSource={RelativeSource Self}}" Value="true" />
                        <Condition Binding="{Binding EditMode, RelativeSource={RelativeSource Self}}" Value="Standalone" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="PART_Content" Property="Template" Value="{Binding EditTemplate, RelativeSource={RelativeSource TemplatedParent}}" />
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding (dxe:BaseEdit.OwnerEdit).(dxe:ActualPropertyProvider.Properties).IsTextEditable, RelativeSource={RelativeSource Self}}" Value="false" />
                        <Condition Binding="{Binding EditMode, RelativeSource={RelativeSource Self}}" Value="Standalone" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="PART_Content" Property="Template" Value="{Binding EditNonEditableTemplate, RelativeSource={RelativeSource TemplatedParent}}" />
                </MultiDataTrigger>
                <DataTrigger Binding="{Binding ShowBorder, RelativeSource={RelativeSource Self}}" Value="true">
                    <Setter TargetName="PART_ErrorPresenter" Property="dx:WpfSvgPalette.Palette" Value="{DynamicResource {Custom3:InplaceBaseEditThemeKey ResourceKey=ValidationErrorSvgPalette, ThemeName=Office2019Colorful}}" />
                </DataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
