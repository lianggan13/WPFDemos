                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            EnableDPICorrection="{x:Null}" />
                                        <Grid dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;59;10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition x:Name="ColumnField" Width="*" />
                                                <ColumnDefinition x:Name="ColumnButton" Width="16" />
                                            </Grid.ColumnDefinitions>
                                            <ContentPresenter
                                                x:Name="Content"
                                                Grid.Column="0"
                                                Margin="{TemplateBinding Padding}"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;64;12"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                IsHitTestVisible="False" />
                                        </Grid>
                                        <ToggleButton
                                            x:Name="DropDownButton"
                                            dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;66;10"
                                            Focusable="False"
                                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ToggleButton.Style>
                                                <Style TargetType="{x:Type ToggleButton}">
