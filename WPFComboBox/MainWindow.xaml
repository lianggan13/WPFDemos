                                                            dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;77;18"
                                                            KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </Grid>
                                                </ScrollViewer>
                                            </dx:DXBorder>
                                        </Grid>
                                    </Popup>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter TargetName="IsDefault" Property="Opacity" Value="1" />
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Root" Property="Opacity" Value="0.38" />
