                                                    <Setter Property="Foreground" Value="#FF444444" />
                                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                                    <Setter Property="SnapsToDevicePixels" Value="True" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                                <Grid
                                                                    x:Name="Root"
                                                                    dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;19;12"
                                                                    Background="Transparent">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition x:Name="ColumnContent" Width="*" />
                                                                        <ColumnDefinition x:Name="ColumnButton" Width="16" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Grid Grid.Column="1" dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;24;14">
                                                                        <dx:DXBorder
                                                                            x:Name="IsDefault"
                                                                            Margin="1"
                                                                            dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;25;16"
                                                                            Background="{TemplateBinding Background}"
                                                                            EnableDPICorrection="{x:Null}" />
                                                                        <Path
                                                                            x:Name="Content"
                                                                            Uid="@Fill=Foreground"
                                                                            Margin="3"
                                                                            dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;26;16"
                                                                            Fill="#FF444444">
                                                                            <Path.Style>
                                                                                <Style TargetType="{x:Type Path}">
                                                                                    <Setter Property="Data" Value="F1M0,0L8,0 4,4 0,0z" />
                                                                                    <Setter Property="Fill" Value="#FF444444" />
                                                                                    <Setter Property="Height" Value="4" />
                                                                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                                                                    <Setter Property="Margin" Value="0,1,0,0" />
                                                                                    <Setter Property="SnapsToDevicePixels" Value="True" />
                                                                                    <Setter Property="Stretch" Value="Fill" />
                                                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                                                    <Setter Property="Width" Value="8" />
                                                                                </Style>
                                                                            </Path.Style>
                                                                        </Path>
                                                                    </Grid>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="Content" Property="Fill" Value="#FF444444" />
                                                                        <Setter TargetName="IsDefault" Property="Background" Value="#FFCBCACA" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="Content" Property="Fill" Value="#FF444444" />
                                                                        <Setter TargetName="IsDefault" Property="Background" Value="#FFBABAB9" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="Content" Property="Fill" Value="#FF444444" />
                                                                        <Setter TargetName="IsDefault" Property="Background" Value="#FFBABAB9" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                        <Setter TargetName="Root" Property="Opacity" Value="0.38" />
                                                                    </Trigger>
                                                                    <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                                                                        <Setter TargetName="ColumnButton" Property="Width" Value="42" />
                                                                        <Setter TargetName="Content" Property="Margin" Value="14" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ToggleButton.Style>
                                        </ToggleButton>
                                        <dx:DXBorder
                                            x:Name="IsFocus"
                                            Uid="@BorderBrush=HoverForeground"
                                            dx:BlendHelper2.ThemeInfo="Core\Core\Themes\Office2019Colorful\StandardControls\ComboBox.xaml;67;10"
                                            BorderBrush="#FF444444"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            EnableDPICorrection="{x:Null}"
                                            Opacity="0" />
                                    </Grid>
                                    <Popup
