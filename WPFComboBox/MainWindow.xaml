                    <dxe:ButtonsControl
                        x:Name="PART_LeftButtons"
                        Grid.Column="1"
                        dx:BlendHelper2.ThemeInfo="Core\Core\Editors\Themes\Generic\ButtonEdit.xaml;94;10">
                        <dxe:ButtonsControl.Visibility>
                            <Binding Path="ActualShowLeftButtons" RelativeSource="{RelativeSource TemplatedParent}">
                                <Binding.Converter>
